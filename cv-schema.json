{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resume CV Schema",
  "description": "Schema for resume-web cv.json config file (supports i18n multi-file format)",
  "type": "object",
  "required": ["name", "contact"],
  "properties": {
    "defaultLang": {
      "type": "string",
      "description": "Default language code for i18n mode",
      "pattern": "^[a-z]{2}$"
    },
    "availableLangs": {
      "type": "array",
      "description": "Available languages for i18n mode",
      "items": {
        "type": "object",
        "required": ["code", "label"],
        "properties": {
          "code": { "type": "string", "pattern": "^[a-z]{2}$" },
          "label": { "type": "string" }
        }
      }
    },
    "name": {
      "type": "string",
      "description": "Full name",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "description": "Professional title (optional in i18n mode)"
    },
    "image": {
      "type": "string",
      "description": "Path to profile image"
    },
    "contact": {
      "type": "object",
      "required": ["email"],
      "properties": {
        "address": { "type": "string" },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": { "type": "string" },
        "web": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "title": { "type": "string" }
          }
        }
      }
    },
    "socialLinks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "url"],
        "properties": {
          "name": { "type": "string" },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "description": {
      "type": "string",
      "description": "Short profile summary"
    },
    "skills": {
      "oneOf": [
        {
          "type": "array",
          "items": { "type": "string" },
          "description": "Flat array of skills (legacy format)"
        },
        {
          "type": "object",
          "description": "Categorized skills (optional format)",
          "patternProperties": {
            ".*": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      ]
    },
    "languages": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "required": ["level"],
          "properties": {
            "level": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "label": { "type": "string" },
            "cefr": {
              "type": "string",
              "pattern": "^(A1|A2|B1|B2|C1|C2)$"
            }
          }
        }
      }
    },
    "interests": {
      "type": "array",
      "items": { "type": "string" }
    },
    "experience": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "company", "role", "period"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Project or position title (5-7 words recommended)"
          },
          "company": { "type": "string" },
          "location": { "type": "string" },
          "role": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["self_employed", "permanent", "contract", "staffing"]
          },
          "period": {
            "type": "object",
            "required": ["start"],
            "properties": {
              "start": {
                "type": "string",
                "pattern": "^[0-9]{4}-[0-9]{2}$"
              },
              "end": {
                "oneOf": [
                  {
                    "type": "string",
                    "pattern": "^[0-9]{4}-[0-9]{2}$"
                  },
                  { "type": "null" }
                ]
              }
            }
          },
          "skills": {
            "type": "array",
            "items": { "type": "string" }
          },
          "description": {
            "type": "string",
            "description": "One-line summary"
          },
          "details": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["degree", "school"],
        "properties": {
          "degree": { "type": "string" },
          "school": { "type": "string" },
          "location": { "type": "string" },
          "period": {
            "type": "object",
            "properties": {
              "start": {
                "type": "string",
                "pattern": "^[0-9]{4}-[0-9]{2}$"
              },
              "end": {
                "type": "string",
                "pattern": "^[0-9]{4}-[0-9]{2}$"
              }
            }
          },
          "description": { "type": "string" },
          "details": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "certificates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "date": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}$"
          },
          "url": {
            "oneOf": [
              {
                "type": "string",
                "format": "uri"
              },
              { "type": "null" }
            ]
          }
        }
      }
    }
  }
}
